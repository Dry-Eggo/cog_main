#[allow(unused)]

use crate::frontend::token::Token;

pub struct Lexer<'a>  {
    source: &'a str,
    cursor: usize,
    line  : usize,
    column: usize,
}

impl<'a> Lexer<'a> {
    pub fn new(source: &'a str) -> Self {
	Self {
	    source,
	    cursor: 0,
	    line: 1,
	    column: 1,
	}
    }

    fn peek(&self) -> Option<char> {
	if (self.cursor >= self.source.len()) {
	    return None;
	}
    }
    
    pub fn lex(&mut self) -> Vec<Token> {
	let mut tokens = vec![];


	
	
	return tokens;
    }
}
